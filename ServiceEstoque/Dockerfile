FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 8080

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["ServiceEstoque.csproj", "."]
RUN dotnet restore "ServiceEstoque.csproj"
COPY . .
RUN dotnet build "ServiceEstoque.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "ServiceEstoque.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "ServiceEstoque.dll"]